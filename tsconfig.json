{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "styles/*": ["styles/*"],
      "utils": ["lib/utils"],
      "utils/*": ["lib/utils/*"],
      "@/*": [
        "./*"
      ]
    },
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next-default/types/**/*.ts",
    ".next-metaplanet/types/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    ".next-bmj/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
